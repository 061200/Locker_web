    <script type="text/javascript">//dropdown 위해서 fadeToggle 사용
        // 전제가 아니라 마우스 올려놓은 부분의 세부 메뉴만 보기 위해서 this객체에서 .drop(세부 메뉴)를 찾아서 나타나게 함.
        $(".menu_opt").hover(function () {
            $(this).find(".drop").stop().fadeToggle(400);
        });
    
    </script>
    <script>
         $(function () {
            // 이미지 슬라이드 컨트롤를 사용하기 위해서는 carousel를 실행해야한다.	
            $('#carousel-example-generic').carousel({
                // 슬리아딩 자동 순환 지연 시간	
                // false면 자동 순환하지 않는다.	
                interval: 4000,
                // hover를 설정하면 마우스를 가져대면 자동 순환이 멈춘다.	
                pause: "hover",
                // 순환 설정, true면 1 -> 2가면 다시 1로 돌아가서 반복	
                wrap: true,
                // 키보드 이벤트 설정 여부(?)	
                keyboard: true
            });
        });	
    </script>
