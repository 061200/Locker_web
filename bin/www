#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('locker:server');
var http = require('http');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000'); //3000번 포트 열기
app.set('port', port); /// 포트 3000번으로 지정

/**
 * Create HTTP server.
 */

var server = http.createServer(app); //웹서버 생성



var socketio = require('socket.io');
var io = socketio(server); //socketio.listen(server) 하니까 오류가 발생한다. -> 왜 그런지 나중에 알아보자..

io.on('connection', function (socket) {
    console.log("Socket Connected!");
    socket.on('reserve', function (data) {
        //seats[data.page][data.y][data.x] = 2;
        io.emit('reserve', data);
    });
});



/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port,()=>{
  console.log("open 3000 port");
}); // 3000번과 연결시키기
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) { // 포트 번호 유효성 검사..?
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}


//결론적으론.. app 3000번 만드는 파일인 거 같다.